<div id="top-container" class="container-fluid">
    <h1 id="main-title" class="text-center">Encontre o aluguel dos seus sonhos</h1>
    <p id="main-subtitle" class="text-center">Somos o melhor site de busca de alugueis do Brasil</p>
    <form id="search-form" class="form-inline" action="/" method="GET">
      <div class="form-group col-md-10">
        <input type="text" class="form-control" id="rent" name="rent" placeholder="Digite o aluguel que está procurando">
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Procurar</button>
      </div>
    </form>
  </div>
  <main>
    <div id="rents-container" class="container">
      <div class="row">
        <div class="col-md-12">
          {{#if search}}
            <h2 id="rent-list-title">Buscando vagas que contem: {{search}}</h2>
          {{else}}
            <h2 id="rent-list-title">Veja as nossos alugueis em destaque</h2>
          {{/if}}
          <ul id="rent-list" class="list-group">
            {{#each rents}}
            <li class="list-group-item {{#if dataValues.new_rent}}new-rent{{/if}}">
              <img src="/img/company.svg" alt="Company">
              <p> {{dataValues.locator}} </p>
              <h2>{{dataValues.title}}</h2>
              <p>R$ {{dataValues.value}}</p>
              <span class="new-rent-label">Nova</span> {{!--verificar se é 0 ou 1 para publi velha ou nova respectivamente --}}
              <a class="btn btn-primary" href="/rents/detail/{{dataValues.id}}">Ver vaga</a>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </main>